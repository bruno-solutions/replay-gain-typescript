root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 1000
tab_width = 4

[*.sass]
indent_size = 2

[*.scss]
indent_size = 2

[{*.ats,*.ts}]
indent_size = 2
max_line_length = 999
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
max_line_length = 999

[{*.yaml,*.yml}]
indent_size = 2
